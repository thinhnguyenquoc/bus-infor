				</div>
				<div class="clear"> </div>
			</div>
		</div>
		<div class="content">
			<div class="wrap">
			    <div class="single-page">
				    <div class="single-page-artical ">
                        <div class="artical-content post-basic-info">
                            @if (!string.IsNullOrEmpty(Model.TopDetailImage))
                            {
                                <img src="@Model.TopDetailImage" title="banner1">
                            }
                            <h3><a href="#">@Model.Title</a></h3>
                            <span><a href="#"><label> </label>@Model.Genre</a></span>
                            <div style="font-size: 0.875em;	color: #B7B5B5;	margin: 0.6em 0; line-height: 1.5em;">
                                <i class="fa fa-tags"></i><span> @Model.Tag</span>
                            </div>
                            <div style="display:inline-block">
								<div
							  class="fb-like"
							  data-share="true"
							  data-width="450"
							  data-href="https://www.facebook.com/thongtinxebuyt"
							  data-show-faces="true" style="display:inline-block"></div>
							  <div class="fb-follow" data-href="https://www.facebook.com/thongtinxebuyt" data-layout="standard" data-show-faces="true" style="display:inline-block"></div>
							</div>
