@model Bus_Info.ViewModels.ViewModelNews
@{
    Layout = null;
    ViewBag.Title = "Thông Tin Xe Buýt";
    var baseUrl = new Uri(Request.Url, Url.Content("~")).AbsoluteUri;
    var helpUrl = baseUrl + "Help/Index";
