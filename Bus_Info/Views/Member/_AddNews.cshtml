@{
    Layout = null;    
}
<div class="row" style="margin-left:0px;">
<div class="col-md-12">              
    <div class="box">
    <div class="box-header">       
    </div><!-- /.box-header -->
    <div class="box-body pad">
        <div class="form-group">             
            <div>
                <label for="inputEmail3" class="col-sm-2 control-label">Title</label>
                <div class="col-sm-10">
                <input class="form-control" value="{{Title}}" ng-model="Title" placeholder="title">
                </div>
            </div>
            <div>
                <label for="inputEmail3" class="col-sm-2 control-label">Gerne</label>
                <div class="col-sm-10">
                <input class="form-control" value="{{Genre}}" ng-model="Genre" placeholder="Genre">
                </div>
            </div>
            <div>
                <label for="inputEmail3" class="col-sm-2 control-label">Tag</label>
                <div class="col-sm-10">
                <input class="form-control" value="{{Tag}}" ng-model="Tag" placeholder="Tag">
                </div>
            </div>
            <div>
                <label for="inputEmail3" class="col-sm-2 control-label">Discription Image</label>
                <div class="col-sm-10">
                <input class="form-control" value="{{TopImage}}" ng-model="TopImage" placeholder="200 x 200">
                </div>
            </div>
            <div class="clear"></div>
            <div>
                <label for="inputEmail3" class="col-sm-2 control-label">Description</label>
                <div class="col-sm-10" id="description">
                    <textarea class="textarea" id="editArea" ng-model="Description" placeholder="Place some text here" style="width: 100%; height: 150px; font-size: 14px; line-height: 14px; border: 1px solid #dddddd; padding: 10px; ">{{Description}}</textarea>
                </div>
            </div>
            <br />
            <div>
                <label for="inputEmail3" class="col-sm-2 control-label">Top Image</label>
                <div class="col-sm-10">
                <input class="form-control" value="{{TopDetailImage}}" ng-model="TopDetailImage" placeholder="1200 x 620">
                </div>
            </div>
            <div >
                <label for="inputEmail3" class="col-sm-2 control-label">Content</label>
                <div class="col-sm-10" id="Content">
                    <textarea class="textarea" id="editArea2" style="width: 100%; height: 400px; font-size: 14px; line-height: 14px; border: 1px solid #dddddd; padding: 10px; " ng-model="Body" placeholder="your content">{{Body}}</textarea>
                </div>
            </div>   
            <div>
                <label for="inputEmail3" class="col-sm-2 control-label">Publish</label>
                <div class="col-sm-10">
                <input type="checkbox" ng-model="Publish" value="{{Publish}}"></input> 
                </div>
            </div> 
            <div>
                <label for="inputEmail3" class="col-sm-2 control-label" style="margin-left:-16.66%">New</label>
                <div class="col-sm-9">
                <input type="checkbox" ng-model="New" value="{{New}}"></input> 
                </div>
            </div>     
            <div>
                <label for="inputEmail3" class="col-sm-2 control-label" style="margin-left:-7%">Upload Image</label>
                <div class="col-sm-10">
                <input type = "file" file-model = "myFile"/>
                <button ng-click = "uploadFile()">Upload Image</button>
                <span id="uploadfileurl" ></span>
                    </div>
            </div>
            <div>
                <button type="submit" class="btn btn-primary" ng-click="submitNews()" style="float:right;margin-right:20px;margin-top:15px;">Submit</button>
            </div>            
        </div>
    </div>
    </div>
</div><!-- /.col-->
</div><!-- ./row -->
